<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JustTransfer" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#38ef7d</item>
        <item name="colorPrimaryDark">#38ef7d</item>
        <item name="colorAccent">#38ef7d</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JustTransfer.Fullscreen" parent="Theme.JustTransfer">
        <item name="android:actionBarStyle">@style/Widget.Theme.JustTransfer.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.JustTransfer.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>